{
  "manifest_version": 2,

  "name": "CS741 Assignment1",
  "description": "This extension detects and blocks XSS whole script injection. (Also blocks simple image frame ads on websites)",
  "version": "1.0",

  "browser_action": {
    "default_icon": "images/get_started16.png"
     },
  "permissions": ["http://*/*", "https://*/*", "<all_urls>", "webRequest", "webRequestBlocking",  "privacy" , "background" ],

  
"background": {
      "scripts": [ "background.js", "background2.js" ]
   }

}